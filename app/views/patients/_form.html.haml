= form_for [client, patient] do |f|

  %fieldset
    %legend Name
    %ol
      %li
        = f.label :name
        = f.text_field :name, :autocomplete => :off
      %li
        = f.label :sex
        = f.select :sex, Patient::Sexes
      %li
        = f.label :species
        = f.select :species, Patient::Species
      %li
        = f.label :breed
        = f.select :breed, Patient::Breed
      %li
        = f.label :weight
        = f.text_field :weight, :autocomplete => :off
      %li
        = f.label :birth_date
        = f.date_select :birth_date
      %li
        = f.label :color
        = f.text_field :color, :autocomplete => :off
      %li
        = f.label :microchip
        = f.text_field :microchip, :autocomplete => :off


  %fieldset{:class => "submit"}
    = f.submit
