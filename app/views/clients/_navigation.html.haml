= render 'search_bar'

#client-navigation
  %h2 
    %a{:class=> 'select'}!= "Client &rarr; #{h name_last_first(client)}"
  %ul
    %li
      %a{:href => '#', :class => 'selected'} Client
    %li
      %a{:href => '#'} Details

:javascript
  $(document).ready(function() {
    $('#client-navigation a.select').mousedown(function(event) {
      if($('#client-search-bar').hasClass('open')) {
        $('#client-search-bar').slideUp('slow');
        $('#client-search-bar').removeClass('open');
      } else {
        $('#client-search-bar').slideDown('slow', function() {
            $('#client-search-bar :input:first').focus();
          });
        $('#client-search-bar').addClass('open');
      }
    });
  });
